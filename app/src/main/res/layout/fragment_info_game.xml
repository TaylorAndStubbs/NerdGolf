<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" style="@style/FragmentTheme">

    <EditText
        android:layout_marginTop="50dp"
        android:id="@+id/course_name_input"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:hint="@string/course_name_hint"
        android:imeOptions="actionDone"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/total_number_holes_label"/>

        <com.taylorstubbs.nerdgolf.nerdgolf.widgets.BiggerNumberPicker
            android:id="@+id/total_number_holes_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/start_game_button"
        style="@style/ButtonTheme"
        android:text="@string/start_game_button_label"/>

</RelativeLayout>